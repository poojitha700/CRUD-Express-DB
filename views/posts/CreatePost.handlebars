<section id="postBlock" class="card col-md-4 mx-auto my-3">
  <article class="card-body">
    <h2
      class="display-5 text-center font-weight-bold-primary text-uppercase text-primary"
    >create post</h2>
    {{!handlebar looping}}
    {{#each errors}}
      <h1 style="color: red;">{{text}}</h1>
    {{else}}
    {{/each}}
    {{! //end of handlebar looping }}
    <form action="/posts/create-post" method="POST">
      <div class="form-group my-3">
        <label for="title">Title</label>
        <input
          type="text"
          class="form-control"
          name="title"
          id="title"
          placeholder="enter post title"
        />
      </div>
      <div class="form-group my-3">
        <label for="details">Details</label>
        <textarea
          cols="10"
          rows="10"
          id="details"
          name="details"
          class="form-control"
        ></textarea>
      </div>
      <div class="form-group">
        <button class="form-control btn-primary my-3">Create Post</button>
      </div>

    </form>
  </article>
</section>